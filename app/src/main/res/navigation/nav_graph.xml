<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mapFragment">


    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.androidhomeworks.presentation.screens.map.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_mapFragment_to_markerBottomSheetFragment"
            app:destination="@id/markerBottomSheetFragment" />
    </fragment>
    <dialog
        android:id="@+id/markerBottomSheetFragment"
        android:name="com.example.androidhomeworks.presentation.screens.bottom.MarkerBottomSheetFragment"
        android:label="MarkerBottomSheetFragment" >
        <argument
            android:name="LocationDTO"
            app:argType="com.example.androidhomeworks.data.remote.location.LocationDTO" />
    </dialog>
</navigation>