<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/back_icon"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRegisterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_title"
        android:layout_marginTop="60dp"
        android:layout_marginStart="16dp"
        android:textSize="36sp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEmail"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="15sp"
        android:hint="@string/enter_email_hint"
        android:padding="17sp"
        android:background="@drawable/rectangle_black_corners"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etUsername"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="15sp"
        android:hint="@string/enter_username_hint"
        android:padding="17sp"
        android:background="@drawable/rectangle_black_corners"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="15sp"
        android:hint="@string/enter_password_hint"
        android:padding="17sp"
        android:background="@drawable/rectangle_black_corners"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/black_rounded_rectangle"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/black_rounded_rectangle"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTermsAndPrivacy"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:layout_marginHorizontal="16dp"
        android:text="@string/terms_and_Privacy"
        android:tooltipText="@string/terms_and_privacy_tooltip"
        android:lineHeight="18sp"
        android:textSize="13sp"/>




</androidx.appcompat.widget.LinearLayoutCompat>