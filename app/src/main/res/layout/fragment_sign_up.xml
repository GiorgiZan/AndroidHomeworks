<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCompanyLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="105dp"
        app:layout_constraintWidth_percent="0.34"
        app:layout_constraintHeight_percent="0.14"
        android:src="@drawable/company_logo"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toTopOf="@id/main" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_your_account"
        android:layout_marginTop="10dp"
        android:textSize="34sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toBottomOf="@+id/ivCompanyLogo" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="35dp"
        android:drawableStart="@drawable/mail_icon"
        android:paddingStart="15dp"
        android:drawablePadding="10dp"
        android:hint="@string/email_hint"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:background="@drawable/gray_rounded_rectangle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintStart_toEndOf="@id/main"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/gray_rounded_rectangle"
        app:hintEnabled="false"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/password_hint"
        android:drawableStart="@drawable/padlock"
        android:paddingStart="18dp"
        android:drawablePadding="10dp"
        android:textSize="16sp"
        android:background="@android:color/transparent"/>

    </com.google.android.material.textfield.TextInputLayout>


    <CheckBox
        android:id="@+id/chkBoxRememberMe"
        android:theme="@style/checkBoxStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/remember_me"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/passwordInputLayout"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/black_rounded_rectangle"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkBoxRememberMe" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/dividerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/tvFacebookContainer"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/light_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="@string/or_continue_with"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/light_gray" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFacebookContainer"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/rounded_white_corners_rectangle"
        app:layout_constraintBottom_toTopOf="@id/tvSignIn"
        app:layout_constraintEnd_toStartOf="@+id/tvSignIn"
        app:layout_constraintStart_toEndOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/facebook"
        app:layout_constraintBottom_toBottomOf="@+id/tvFacebookContainer"
        app:layout_constraintEnd_toEndOf="@+id/tvFacebookContainer"
        app:layout_constraintStart_toStartOf="@+id/tvFacebookContainer"
        app:layout_constraintTop_toTopOf="@+id/tvFacebookContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGoogleContainer"
        android:background="@drawable/rounded_white_corners_rectangle"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toStartOf="@id/tvAppleContainer"
        app:layout_constraintTop_toTopOf="@id/tvFacebookContainer"
        app:layout_constraintStart_toEndOf="@id/tvFacebookContainer"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/google"
        app:layout_constraintBottom_toBottomOf="@+id/tvGoogleContainer"
        app:layout_constraintEnd_toEndOf="@+id/tvGoogleContainer"
        app:layout_constraintStart_toStartOf="@+id/tvGoogleContainer"
        app:layout_constraintTop_toTopOf="@+id/tvGoogleContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAppleContainer"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_white_corners_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvGoogleContainer"
        app:layout_constraintTop_toTopOf="@id/tvFacebookContainer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivApple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/apple"
        app:layout_constraintBottom_toBottomOf="@+id/tvAppleContainer"
        app:layout_constraintEnd_toEndOf="@+id/tvAppleContainer"
        app:layout_constraintStart_toStartOf="@+id/tvAppleContainer"
        app:layout_constraintTop_toTopOf="@+id/tvAppleContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/sign_in_text"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"/>






</androidx.constraintlayout.widget.ConstraintLayout >