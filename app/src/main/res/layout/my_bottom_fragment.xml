<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top"
    android:paddingBottom="40dp">


    <View
        android:id="@+id/line"
        android:layout_width="30dp"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:background="@color/status_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLeaveAReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/leave_a_review"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/status_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLeaveAReview" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderContainer"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/dark_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/underline" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvImageContainer"
        android:layout_width="135dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/tvOrderContainer"
        app:layout_constraintStart_toStartOf="@+id/tvOrderContainer"
        app:layout_constraintTop_toTopOf="@+id/tvOrderContainer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivOrderImg"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvImageContainer"
        app:layout_constraintEnd_toEndOf="@+id/tvImageContainer"
        app:layout_constraintStart_toStartOf="@+id/tvImageContainer"
        app:layout_constraintTop_toTopOf="@+id/tvImageContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="90dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvImageContainer"
        app:layout_constraintTop_toTopOf="@+id/tvImageContainer" />

    <View
        android:id="@+id/colorCircle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/black_circle_background"
        app:layout_constraintStart_toEndOf="@+id/tvImageContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderTitle" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/colorCircle"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="@string/line"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/tvOrderColor"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderTitle" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/appCompatTextView"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_with_no_corners"
        android:backgroundTint="@color/gray"
        android:gravity="center"
        android:paddingStart="9dp"
        android:paddingTop="4dp"
        android:paddingEnd="9dp"
        android:paddingBottom="4dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvImageContainer"
        app:layout_constraintTop_toBottomOf="@+id/colorCircle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvImageContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderStatus" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/gray"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingTop="7dp"
        android:paddingEnd="15dp"
        android:paddingBottom="7dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvOrderPrice"
        app:layout_constraintEnd_toEndOf="@+id/tvOrderContainer"
        app:layout_constraintStart_toEndOf="@+id/tvOrderPrice"
        app:layout_constraintTop_toTopOf="@+id/tvOrderPrice" />

    <View
        android:id="@+id/secondUnderline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/status_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHowIsYourOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/how_is_your_order"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondUnderline" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLeaveRatingAndReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/please_give_your_rating_also_your_review"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHowIsYourOrder" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:theme="@style/RatingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLeaveRatingAndReview" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounder_rectangle_with_white_corners"
        android:hint="@string/wrtie_a_review"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/status_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />


    <View
        android:id="@+id/thirdUnderline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/status_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etReview" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/gray"
        android:paddingStart="65dp"
        android:paddingTop="20dp"
        android:paddingEnd="65dp"
        android:paddingBottom="20dp"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btnSubmit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdUnderline" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/white"
        android:paddingStart="65dp"
        android:paddingTop="20dp"
        android:paddingEnd="65dp"
        android:paddingBottom="20dp"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCancel"
        app:layout_constraintTop_toBottomOf="@+id/thirdUnderline" />


</androidx.constraintlayout.widget.ConstraintLayout>