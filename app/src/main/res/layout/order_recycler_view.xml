<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    android:clipToPadding="false"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderContainer"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="301dp"
        android:background="@drawable/rounded_shadow_rectangle"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:elevation="13dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvOrderContainer"
        app:layout_constraintTop_toTopOf="@+id/tvOrderContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:elevation="13dp"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tvOrderContainer"
        app:layout_constraintTop_toTopOf="@+id/tvOrderContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderTrackingNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:elevation="13dp"
        android:text="@string/tracking_number"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvOrderContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderName" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDisplayOrderTrackingNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:elevation="13dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvOrderTrackingNumber"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:elevation="13dp"
        android:text="@string/quantity"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvOrderContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderTrackingNumber" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDisplayOrderQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:elevation="13dp"
        android:layout_marginStart="7dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvOrderQuantity"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderTrackingNumber" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:elevation="13dp"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvOrderContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderQuantity"
        app:textAllCaps="true" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="2dp"
        android:textColor="@color/gray"
        android:elevation="13dp"
        android:text="@string/subtotal"
        app:layout_constraintEnd_toStartOf="@+id/tvDisplayOrderSubtotal"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderDate" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDisplayOrderSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="25dp"
        android:elevation="13dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/tvOrderContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderDate" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnOrderDetails"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="@string/details"
        android:textStyle="bold"
        android:background="@drawable/rounded_black_corners_rectangle"
        android:elevation="13dp"
        app:layout_constraintEnd_toEndOf="@+id/tvOrderContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderSubtotal" />

</androidx.constraintlayout.widget.ConstraintLayout>