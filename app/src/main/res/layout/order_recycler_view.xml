<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderContainer"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/dark_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvImageContainer"
        android:layout_width="135dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/tvOrderContainer"
        app:layout_constraintStart_toStartOf="@+id/tvOrderContainer"
        app:layout_constraintTop_toTopOf="@+id/tvOrderContainer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivOrderImg"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvImageContainer"
        app:layout_constraintEnd_toEndOf="@+id/tvImageContainer"
        app:layout_constraintStart_toStartOf="@+id/tvImageContainer"
        app:layout_constraintTop_toTopOf="@+id/tvImageContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="90dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvImageContainer"
        app:layout_constraintTop_toTopOf="@+id/tvImageContainer" />

    <View
        android:id="@+id/colorCircle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/black_circle_background"
        app:layout_constraintStart_toEndOf="@+id/tvImageContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderTitle" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/colorCircle"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="@string/line"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/tvOrderColor"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderTitle" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/appCompatTextView"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_with_no_corners"
        android:backgroundTint="@color/gray"
        android:gravity="center"
        android:paddingStart="9dp"
        android:paddingTop="4dp"
        android:paddingEnd="9dp"
        android:paddingBottom="4dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvImageContainer"
        app:layout_constraintTop_toBottomOf="@+id/colorCircle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvImageContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderStatus" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/gray"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingTop="7dp"
        android:paddingEnd="15dp"
        android:paddingBottom="7dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvOrderPrice"
        app:layout_constraintEnd_toEndOf="@+id/tvOrderContainer"
        app:layout_constraintStart_toEndOf="@+id/tvOrderPrice"
        app:layout_constraintTop_toTopOf="@+id/tvOrderPrice" />


</androidx.constraintlayout.widget.ConstraintLayout>