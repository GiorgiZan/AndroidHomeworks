<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUsersForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/users_form"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textSize="30sp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="30dp"
        android:inputType="text"
        android:hint="@string/enter_full_name"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"
        android:inputType="textEmailAddress"
        android:hint="@string/enter_email" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUsersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:text="@string/users_count"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="150dp"
        android:text="@string/add_user"/>


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etFindUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="30dp"
        android:inputType="textEmailAddress"
        android:hint="@string/find_user_by_email"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGetUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="150dp"
        android:textSize="12sp"
        android:text="@string/get_user_info"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="20sp"/>


</androidx.appcompat.widget.LinearLayoutCompat>