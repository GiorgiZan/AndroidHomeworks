<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBookingPlace"
        android:layout_width="374dp"
        android:layout_height="460dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/main"
        app:layout_constraintStart_toStartOf="@+id/main"
        app:layout_constraintTop_toTopOf="@+id/main" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnArrowLeft"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/half_rounded_corner"
        android:src="@drawable/arrow_left_icon"
        app:layout_constraintStart_toStartOf="@id/ivBookingPlace"
        app:layout_constraintTop_toTopOf="@id/ivBookingPlace" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnArchive"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/half_rounded_corner"
        android:src="@drawable/archive_icon"
        app:layout_constraintEnd_toEndOf="@id/ivBookingPlace"
        app:layout_constraintTop_toTopOf="@id/ivBookingPlace" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvInfoAboutPlace"
        android:layout_width="331dp"
        android:layout_height="104dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/smooth_corners"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/ivBookingPlace"
        app:layout_constraintEnd_toEndOf="@id/ivBookingPlace"
        app:layout_constraintStart_toStartOf="@id/ivBookingPlace" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameOfPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/tvInfoAboutPlace"
        app:layout_constraintTop_toTopOf="@id/tvInfoAboutPlace" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="26dp"
        android:textColor="@color/pale_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/tvInfoAboutPlace"
        app:layout_constraintTop_toTopOf="@id/tvInfoAboutPlace" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLocationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/location_icon"
        app:layout_constraintBottom_toBottomOf="@id/tvInfoAboutPlace"
        app:layout_constraintStart_toStartOf="@id/tvInfoAboutPlace" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContinentOfPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="18dp"
        android:textColor="@color/pale_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/tvInfoAboutPlace"
        app:layout_constraintStart_toStartOf="@id/tvInfoAboutPlace" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPriceAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/pale_gray"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/tvInfoAboutPlace"
        app:layout_constraintEnd_toEndOf="@id/tvInfoAboutPlace" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:text="@string/overview_tab"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toBottomOf="@id/ivBookingPlace" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="@string/details_tab"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/tvOverview"
        app:layout_constraintTop_toBottomOf="@id/ivBookingPlace" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTimeSquare"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="99dp"
        android:background="@drawable/rounded_squares"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toBottomOf="@id/ivBookingPlace" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivClockIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/clock_icon"
        app:layout_constraintStart_toStartOf="@id/tvTimeSquare"
        app:layout_constraintTop_toTopOf="@id/tvTimeSquare" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="105dp"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/tvTimeSquare"
        app:layout_constraintTop_toBottomOf="@id/ivBookingPlace" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWeatherSquare"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="99dp"
        android:background="@drawable/rounded_squares"
        app:layout_constraintEnd_toStartOf="@+id/tvRating"
        app:layout_constraintStart_toEndOf="@id/tvTimeSquare"
        app:layout_constraintTop_toBottomOf="@id/ivBookingPlace" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivWeatherIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/weather_icon"
        app:layout_constraintStart_toStartOf="@id/tvWeatherSquare"
        app:layout_constraintTop_toTopOf="@id/tvWeatherSquare" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTemperatureValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="105dp"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/tvWeatherSquare"
        app:layout_constraintTop_toBottomOf="@id/ivBookingPlace" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRating"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="99dp"
        android:background="@drawable/rounded_squares"
        app:layout_constraintEnd_toEndOf="@+id/main"
        app:layout_constraintStart_toEndOf="@id/tvTemperatureValue"
        app:layout_constraintTop_toBottomOf="@id/ivBookingPlace" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivStarIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/star_icon"
        app:layout_constraintStart_toStartOf="@id/tvRating"
        app:layout_constraintTop_toTopOf="@id/tvRating" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRatingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="105dp"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/tvRating"
        app:layout_constraintTop_toBottomOf="@id/ivBookingPlace" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/svTextScroll"
        android:layout_width="374dp"
        android:layout_height="110dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="@+id/main"
        app:layout_constraintStart_toStartOf="@+id/main"
        app:layout_constraintTop_toBottomOf="@id/ivBookingPlace">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPlaceDescription"
            android:layout_width="374dp"
            android:layout_height="135dp"
            android:lineHeight="27sp"
            android:textSize="18sp" />
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnBookNow"
        android:layout_width="373dp"
        android:layout_height="66dp"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/main"
        app:layout_constraintStart_toStartOf="@+id/main"
        app:layout_constraintTop_toBottomOf="@id/svTextScroll" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSendIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="120dp"
        android:src="@drawable/send_icon"
        app:layout_constraintEnd_toEndOf="@id/btnBookNow"
        app:layout_constraintTop_toTopOf="@id/btnBookNow" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBookNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="163dp"
        android:text="@string/book_now"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/btnBookNow"
        app:layout_constraintTop_toTopOf="@id/btnBookNow" />


</androidx.constraintlayout.widget.ConstraintLayout>