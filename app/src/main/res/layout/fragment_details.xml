<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailsFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBackIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:src="@drawable/arrow_back"
        android:elevation="10dp"
        android:background="@drawable/round_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="@string/order_details"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderDetailsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="401dp"
        android:background="@drawable/rounded_shadow_rectangle"
        android:elevation="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:elevation="3dp"
        android:text="@string/order_name"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintTop_toTopOf="@+id/tvOrderDetailsContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDisplayOrderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:elevation="3dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintStart_toEndOf="@+id/tvOrderName"
        app:layout_constraintTop_toTopOf="@+id/tvOrderDetailsContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        android:text="@string/order_date"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDisplayOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintStart_toEndOf="@+id/tvOrderDate"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayOrderName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderTrackingNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/tracking_number"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderDate" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDisplayOrderTrackingNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintStart_toEndOf="@+id/tvOrderTrackingNumber"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayOrderDate" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/quantity"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderTrackingNumber" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDisplayQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintStart_toEndOf="@+id/tvOrderQuantity"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayOrderTrackingNumber" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderStatus"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:elevation="3dp"
        android:text="@string/status"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderQuantity" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDisplayStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintStart_toEndOf="@+id/tvOrderStatus"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayQuantity" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        android:text="@string/subtotal"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderStatus" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDisplayOrderSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintStart_toEndOf="@+id/tvOrderSubtotal"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayStatus" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrderTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:elevation="3dp"
        android:text="@string/total"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderSubtotal" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDisplayOrderTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvOrderDetailsContainer"
        app:layout_constraintStart_toEndOf="@+id/tvOrderTotal"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayOrderSubtotal" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDelivered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval"
        android:padding="15dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        android:text="@string/delivered"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btnCancelled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderDetailsContainer" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval"
        android:textColor="@color/white"
        android:visibility="gone"
        android:padding="15dp"
        android:layout_marginTop="80dp"
        android:text="@string/canceled"
        android:backgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDelivered"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderDetailsContainer" />




</androidx.constraintlayout.widget.ConstraintLayout>