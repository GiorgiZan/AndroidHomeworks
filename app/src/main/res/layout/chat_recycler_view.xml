<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPersonIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/light_green"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Alice Smith"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivPersonIcon"
        app:layout_constraintTop_toTopOf="@+id/ivPersonIcon" />


    <android.widget.HorizontalScrollView
        android:id="@+id/tvPersonAction"
        android:layout_width="0dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ivPersonIcon"
        app:layout_constraintEnd_toStartOf="@+id/tvNumberOfMessages"
        app:layout_constraintStart_toEndOf="@+id/tvActionIcon">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPersonActionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            android:text="Great. I will have a look"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivPersonIcon"
            app:layout_constraintStart_toEndOf="@+id/tvActionIcon" />
    </android.widget.HorizontalScrollView>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPersonTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="25dp"
        android:text="4:40pm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPersonName" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNumberOfMessages"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/light_green"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/tvPersonTime"
        app:layout_constraintTop_toBottomOf="@+id/tvPersonTime" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tvTyping"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/typing"
        app:layout_constraintEnd_toEndOf="@+id/tvPersonTime"
        app:layout_constraintStart_toEndOf="@+id/tvNumberOfMessages"
        app:layout_constraintTop_toBottomOf="@+id/tvPersonTime" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvActionIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/grayish_white"
        android:drawableStart="@drawable/audio_icon"
        android:padding="6.5dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/tvPersonAction"
        app:layout_constraintStart_toEndOf="@+id/ivPersonIcon"
        app:layout_constraintTop_toTopOf="@+id/tvPersonAction" />



    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPersonIcon"
        app:layout_constraintTop_toBottomOf="@+id/ivPersonIcon" />


</androidx.constraintlayout.widget.ConstraintLayout>